<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.play.PlayController">
    <left>
        <VBox spacing="10">
            <Label style="-fx-font-size: 16pt;" text="Controls" />
            <HBox spacing="10">
                <Button fx:id="playButton" text="Play" />
                <Button fx:id="ballButton" text="Ball" />
            </HBox>
        </VBox>
    </left>
    <center>
        <VBox style="-fx-padding: 20;">
         <StackPane>
            <children>
                 <ImageView preserveRatio="true" StackPane.alignment="CENTER">
                  <image>
                     <Image url="@../../play_bg.jpg" />
                  </image>
                 </ImageView>
               <VBox prefHeight="200.0" prefWidth="100.0">
                  <children>
                     <HBox alignment="CENTER">
                        <children>
                              <Label fx:id="scoreCardLabel" alignment="CENTER" style="-fx-font-size: 24pt;" text="Scorecard" textAlignment="CENTER" HBox.hgrow="ALWAYS" />
                        </children>
                     </HBox>
                     <HBox>
                        <children>
                              <Label fx:id="battingTeamLabel" contentDisplay="CENTER" style="-fx-font-size: 22pt;" text="Batting Team" />
                        </children>
                     </HBox>
                        <HBox spacing="10">
                            <Label text="Batsman 1" />
                            <Label text="50 (60)" />
                        </HBox>
                        <HBox spacing="10">
                        <children>
                               <Label text="Batsman 2" />
                               <Label text="30 (40)" />
                        </children></HBox>
                        <HBox spacing="10">
                            <Label text="Batsman 3" />
                            <Label text="30 (40)" />
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Batsman 4" />
                            <Label text="30 (40)" />
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Batsman 5" />
                            <Label text="30 (40)" />
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Batsman 6" />
                            <Label text="30 (40)" />
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Batsman 7" />
                            <Label text="30 (40)" />
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Batsman 8" />
                            <Label text="30 (40)" />
                        </HBox>
                         <HBox spacing="10">
                            <Label text="Batsman 9" />
                            <Label text="30 (40)" />
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Batsman 10" />
                            <Label text="30 (40)" />
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Batsman 11" />
                            <Label text="30 (40)" />
                        </HBox>
                  </children>
               </VBox>
            </children>
         </StackPane>
         <BorderPane.margin>
            <Insets bottom="-10.0" left="-10.0" right="-10.0" top="-20.0" />
         </BorderPane.margin>
            <!-- Add more labels for additional batsmen -->
        </VBox>
    </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
